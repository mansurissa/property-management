# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://username:password@host:port/database_name"
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=renta-db

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=4000
NODE_ENV=development

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
# Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=24h

# ===========================================
# FRONTEND URL
# ===========================================
# Used for OAuth redirects and CORS
# Development: http://localhost:3000
# Production: https://yourdomain.com
CLIENT_URL=http://localhost:3000

# ===========================================
# EMAIL CONFIGURATION (for password reset, welcome emails)
# ===========================================
# For Gmail:
# 1. Enable 2-factor authentication on your Google account
# 2. Generate an "App Password": https://myaccount.google.com/apppasswords
# 3. Use the generated password in EMAIL_PASSWORD
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here
EMAIL_FROM=noreply@renta.com

# ===========================================
# CLOUDINARY CONFIGURATION (for image uploads)
# ===========================================
# Get these from: https://cloudinary.com/console
# 1. Sign up at https://cloudinary.com
# 2. Get your credentials from the dashboard
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# RATE LIMITING
# ===========================================
# Window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
# Max file size in bytes (10485760 = 10MB)
MAX_FILE_SIZE=10485760
# Max number of files per request
MAX_FILES_PER_REQUEST=10
